<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#ddd"
              android:gravity="center"
              android:orientation="vertical"
              android:padding="15dp">

    <!--<ImageView-->
    <!--android:id="@+id/imgFood"-->
    <!--android:layout_width="150dp"-->
    <!--android:layout_height="120dp"-->
    <!--app:srcCompat="@drawable/french_fries" />-->

    <TextView
            android:id="@+id/tvCourseID"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:gravity="center"
            android:text="tvCourseID"
            android:textSize="20sp" tools:visibility="invisible"/>

    <TextView
            android:id="@+id/tvCourseName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="tvCourseName"
            android:textStyle="bold"
            android:textSize="20sp"/>

    <TextView
            android:id="@+id/tvCourseNumStudents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="tvCourseNumStudents"
            android:textSize="20sp"/>

    <TextView
            android:id="@+id/tvCourseTotalClasses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="tvCourseTotalClasses"
            android:textSize="20sp"/>

</LinearLayout>